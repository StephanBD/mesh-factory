extend head/_link.pug
block contenidos
  h1(class="mbottom-2 t-center") Dark mode
  //--------------------------------------
  .content-m.p

    button#toggle.btn-center.d-block.bg-info.round Change Colors

    h2 background colors
    - var bgColors = [   "primary", "secondary", "success", "info", "warning", "danger", "white", "gray-light", "gray", "gray-dark", "black"]
    div.grid.col-6.gap
      each color in bgColors
        div(class="h-150 full shadow  bg-" + color) 

    h2 text colors
    - var tColors = [  "text-white" , "text-color" , "title-color" , "link-color" ]
    div(style="background:#999;").p
      each color in tColors
        p(class="t-" + color)  t-#{color}    
      each color in bgColors
        p(class="t-" + color)  t-#{color} 

    h2 image
    img(src="https://www.dejavu-psychics.com/wp-content/uploads/2015/11/rainbow-colors-image.jpg")
  

  .content-m.p
    h2 Javascript code
    pre
      | // Select the button
      | const button = document.querySelector("#toggle");

      | // Listen for a click on the button
      | button.addEventListener("click",  function() {
      |   document.body.classList.toggle("dark-theme");
      |   localStorage.getItem("theme")
      |     ? localStorage.removeItem("theme")
      |     : localStorage.setItem("theme", "dark-theme") 
      | });
    h4 Local storage
    pre
      | // Apply the cached theme on reload
      | const theme = localStorage.getItem("theme");
      | if (theme) {
      |   document.body.classList.toggle(theme);
      | }




